@model IEnumerable<Housematica.Data.Data.CMS.User>


@{
    ViewData["Title"] = "Home Page";
}

<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4  subheader-transparent " id="kt_subheader">
        <div class=" container  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Details-->
            <div class="d-flex align-items-center flex-wrap mr-2">

                <!--begin::Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                    Twój zespół
                </h5>
                <!--end::Title-->
                <!--begin::Separator-->
                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-5 bg-gray-200"></div>
                <!--end::Separator-->
                <!--begin::Search Form-->
                <div class="d-flex align-items-center" id="kt_subheader_search">
                    <span class="text-dark-50 font-weight-bold" id="kt_subheader_total">
                        @Model.Count() członków
                    </span>

                </div>
                <!--end::Search Form-->

            </div>
            <!--end::Details-->

            <div class="d-flex align-items-center">
                <!--begin::Button-->
                <a href="#" class="">

                </a>
                <!--end::Button-->
                <!--begin::Button-->
                <a class="btn btn-light-primary font-weight-bold ml-2" data-toggle="modal" data-target="#exampleModalCenter">

                    Dodaj członka
                </a>

            </div>



        </div>
    </div>
    <!--end::Subheader-->
    <!--begin::Modal-->
    <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="display: none;">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">

                <div class="modal-body">
                    <!--begin::Body-->
                    <button type="button" class="close closeInviteModal" data-dismiss="modal" aria-label="Close">
                        <i aria-hidden="true" class="ki ki-close"></i>
                    </button>
                    <div class="card-body  pt-4" style="padding-bottom:1rem !important">
                        <lottie-player src="/assets/media/lottie/lf30_editor_kcneaimh.json" background="transparent" speed="1" style="height: 300px;" autoplay></lottie-player>
                        <p class="text-center" style="margin-top: 2rem; margin-bottom:3rem !important; font-size: 1.1rem;">W grupie raźniej! Wpisz adres email współpracownika aby zaprosić go do zespołu</p>
                        <form class="form" id="kt_form_1">
                            <div class="form-group row" style="margin-bottom:0rem !important">

                                <input type="text" class="form-control text-center" name="email" placeholder="Adres email" id="inviteEmail" />
                                <input type="text" class="form-control text-center display-none" id="licenseId" value="@ViewBag.License" />
                            </div>
                        </form>
                       


                    </div>
                    <!--end::Body-->
                </div>
                <div class="modal-footer text-center">

                    <button onclick="invite()" style="width: 40%;

        margin-right: 30%;
        background-color: #3246d3 !important;
        border-color: #3246d3 !important
    " class="invite-button btn btn-primary">
                        Wyślij zaproszenie
                    </button>



                    <button style="width: 28%;

        margin-right: 36%;
        background-color: #3246d3 !important;
        border-color: #3246d3 !important
    " class="loading-button display-none btn btn-primary spinner spinner-white spinner-right">
                        Ładowanie
                    </button>



                </div>

            </div>
        </div>
    </div>


    <!--end::Modal-->
    <!--begin::Entry-->
    <div class="d-flex flex-column-fluid">
        <!--begin::Container-->
        <div class=" container-fluid ">
            <!--begin::Row-->
            <div class="row">

                @foreach (var item in Model)
                {
                    <!--begin::Col-->
                    <div class="col-xl-3 col-lg-6 col-md-6 col-sm-6">
                        <!--begin::Card-->
                        <div class="card card-custom gutter-b card-stretch">
                            <!--begin::Body-->
                            <div class="card-body pt-4">
                               
                                <!--begin::User-->
                                <div class="d-flex align-items-end mb-7">
                                    <!--begin::Pic-->
                                    <div class="d-flex align-items-center">
                                        <!--begin::Pic-->
                                        <div class="flex-shrink-0 mr-4 mt-lg-0 mt-3">
                                            <div class="symbol symbol-circle symbol-lg-75">
                                                <img src="~/assets/media/svg/avatars/@item.avatar" alt="image">
                                            </div>
                                            <div class="symbol symbol-lg-75 symbol-circle symbol-primary d-none">
                                                <span class="font-size-h3 font-weight-boldest">JM</span>
                                            </div>
                                        </div>
                                        <!--end::Pic-->
                                        <!--begin::Title-->
                                        <div class="d-flex flex-column">
                                            <a href="#" class="text-dark font-weight-bold text-hover-primary font-size-h4 mb-0">@item.name @item.surname</a>
                                            <span class="text-muted font-weight-bold">@item.email</span>
                                        </div>
                                        <!--end::Title-->
                                    </div>
                                    <!--end::Title-->
                                </div>
