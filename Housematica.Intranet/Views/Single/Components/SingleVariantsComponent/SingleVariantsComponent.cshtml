@model Housematica.Data.Data.CMS.Single





<div class="pb-5" data-wizard-type="step-content" id="variantStep">
    <h4 class="mb-10 font-weight-bold text-dark">
        Specyfika pięter
    </h4>
    <!--begin::Input-->
    <h3 class="text-dark-25">Rzut zewnętrzny</h3>
    <div id="variant" class="I">


        <div class="row">
            <div class="col-xl-12">
                <div class="form-group">
                    <label>Nazwa modelu</label>
                    <input type="text"
                           class="form-control form-control-solid form-control-lg"
                           id="apartmentArea"
                           asp-for="SingleFloor[0].FloorName"
                           placeholder="Apartment area"
                           oninput="sendToFinalStep(this)" 
                           value="Zewnątrz" readonly/>
                    <span class="form-text text-muted">
                        Zewnętrzna wizualizacja 3D budynku
                    </span>
                </div>
            </div>

        </div>
    </div>
    <!--end::Input-->


    <input type="checkbox" checked asp-for="SingleFloor[0].FloorType" value=true style="display:none"/>

    <div class="row">
        <div class="col-xl-6">
            <div class="form-group">

                <label>Plan piętra</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input"
                           id="PlanVariant1" multiple name="standard3dFile" multiple
                           onchange="readURL(this)" />


                    <label class="custom-file-label"
                           for="customFile">Wybierz plik</label>
                    <span class="form-text text-muted">
                        Wybierz plan piętra w formacjie .pdf
                    </span>

                </div>
            </div>
        </div>

        <div class="col-xl-6">
            <div class="form-group">

                <label>Model apartamentu</label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input"
                           id="ApartmentVariant1" multiple name="standard3dFile" multiple
                           onchange="readURL(this)" />


                    <label class="custom-file-label"
                           for="customFile">Wybierz plik</label>
                    <span class="form-text text-muted">
                        Wybierz model 3D apartamentu
                    </span>

                </div>
            </div>
        </div>
        <input type="text" asp-for="SingleFloor[0].FloorPlan" class="PlanVariant1" style="visibility: hidden;" />
        <input type="text" asp-for="SingleFloor[0].FloorModel" class="ApartmentVariant1" style="visibility: hidden;" />
        <input type="checkbox" asp-for="SingleFloor[0].FloorType" class="ApartmentVariant1" style="visibility: hidden;" checked />
    </div>


    <div id="placeToVariant">



    </div>



    <a onclick="addApartmentVariant()"
       class="btn-block btn btn-light btn-text-primary btn-hover-text-primary font-weight-bold">
        Dodaj kolejne piętro
    </a>

</div>


































